<section class="product-photos-wrapper col-md-12">
  <div class="product-photos">
    <div class="product-photos-header">
      photos and videos
    </div>

    <% if @media.any? %>
      <div class="main-container">
        <div class="main-content-wrapper">
          <div class="flex thumbs-matrix-wrapper product-media">
            <%= render partial: 'product_media', locals: { media: @media } %>
          </div>
        </div>
      </div>
      <% if @media.next_page.present? %>
        <%= render 'more_product_media_button', product: product %>
      <% end %>
    <% else %>
      <div class="no-media-block-wrapper">
        <div class="no-media-block">
          <div class="no-media-title">no photos or videos yet, <b>be the first!</b></div>
          <div>
            <% if user_signed_in? %>
              <div class="dropdown">
                <button type='button' id='upload-menu' class='btn new-post hidden-xs dropdown-toggle'
                  data-toggle='dropdown' aria-haspopup='true' aria-expanded='true'>
                  +new post
                </button>
                <ul class='dropdown-menu header-side-dropdown-button' aria-labelledby='upload-menu'>
                  <li>
                    <%= modal_button_tag 'Photo', modals_path(action: :add_photo), link: true %>
                  </li>
                  <li role='separator' class='divider'></li>
                  <li>
                    <%= modal_button_tag 'Video', modals_path(action: :add_video), link: true %>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
