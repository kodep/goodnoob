<% profile ||= false %>

<div class='thumb-wrapper thumb-photo'>
  <div class='flex thumb-header'>
    <span class='thumb-header-name'>
      <%= photo.user.try :name %>
      <%= photo.user.try(:last_name) if photo.user.try :last_name %>
    </span>
    <div class="thumb-menu-stripe">
      <a class="toggle-product-menu social-share"></a>
      <!-- social share tool window -->

      <div class="menu-group">
        <div class="menu-item">
          <a class="social-share toggle-social-share-menu">Share</a>
        </div>
        <hr>
        <% if profile%>
          <div class="menu-item">
            <%= link_to 'Delete', photo_path(video), method: :delete %>
          </div>
          <hr>
        <% end %>
        <div class="menu-item">
          <a class="share-button-copylink js-copylink" data-copy-url="<%= photo.url %>">Copy Url</a>
        </div>
      </div>

      <span class="social_share_group">
        <span class="share_items">
          <a class="share_item share-button-facebook" href="https://www.facebook.com/sharer/sharer.php?u=<%= image_url(photo.picture.image.url) %>"></a>
          <a class="share_item share-button-twitter"  href="https://twitter.com/intent/tweet?url=<%= image_url(photo.picture.image.url) %>"></a>
          <a class="share_item share-button-whatsapp" href="whatsapp://send?text=<%= image_url(photo.picture.image.url) %>"></a>
          <span class="share_item share-button-separator"></span>
          <a class="share_item share-button-copylink js-copylink" data-copy-url="<%= image_url(photo.picture.image.url) %>"></a>
        </span>
      </span>
    </div>
  </div>
  <div class="thumb-preview">
    <%= link_to photo.picture.image_file_name, photo, { class: 'embed-responsive embed-responsive-16by9 text-hide thumb-bg', style: "background-image: url(#{image_url(photo.picture.image.url(:thumbnail))});"} %>
    <%= link_to photo.picture.image.url, class: 'btn btn-link btn-xs thumb-preview-button js-zoom-photo' do %>
      <span class="glyphicon glyphicon-resize-full"></span>
    <% end %>
  </div>
  <div class='thumb-description thumb-brd-btm-4 text-left'>
    <p>
      <%= truncate photo.comment, length: 200, separator: ' ' %>
    </p>
  </div>
  <div class='flex thumb-footer'>
    <div class='thumb-footer-model'>
      <%= link_to photo.product do %>
          <%= "#{photo.product.company.name} â€“ " if photo.product.company %>
          <%= photo.product.name %>
          <%= "(#{photo.product.year})" if photo.product.year %>
      <% end %>
    </div>
    <div class='thumb-star-wrapper'>
      <%= render 'products/rating', rating: photo.product.rating, product_id: photo.product.id %>
    </div>
  </div>
</div>
