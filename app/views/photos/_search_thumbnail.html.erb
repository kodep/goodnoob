<div class='thumb-wrapper'>
  <div class='flex thumb-header'>
    <span class='thumb-header-abbr'>
      <%= photo.product && photo.product.company && photo.product.company.name %>
    </span>
    <span class='thumb-time-date'><%= photo.created_at.strftime("%d %b %H:%M") %></span>
  </div>
  <%= link_to photo do %>
      <div class='embed-responsive embed-responsive-16by9'>
        <%= image_tag photo.picture.image.url(:thumbnail), alt: '', class: 'img-responsive center-block' %>
      </div>
  <% end %>
  <div class='thumb-description text-left'>
    <p>
      <%= truncate photo.comment, length: 200, separator: ' ' %>
    </p>
  </div>
  <div class='flex thumb-footer'>
    <span class='thumb-footer-model'>
      <%= link_to photo.product do %>
          <%= photo.product.name %> <%= "(#{photo.product.year})" if photo.product.year %>
      <% end %>
    </span>
    <div class='thumb-moreinfo-link'>
      <%= link_to 'More Info...', photo.product %>
    </div>
    <div class='thumb-star-wrapper'>
      <%= render 'products/rating', rating: photo.product.rating %>
    </div>
  </div>
</div>
