<div class="col-md-12 col-sm-12">
  <div class="row">

    <div class="col-md-4 col-sm-4">
      <div class="input-group-btn search-panel  ">
        <button type="button" id="cat-btn" class="btn btn-default dropdown-toggle" style="width: 100%;" data-toggle="dropdown">
          <span id="search_concept">Categories</span> <span class="caret"></span>
        </button>

          <%
            Category.all.in_groups(2, false) do |cats|
              col = col == 'left' ? 'right' : 'left'
          %>
              <div class="buying-guides-<%= col %>-column">
                <% cats.each do |cat| %>
                    <div class="buying-list">
                      <span class="buying-list-header"><%= cat.name %></span>
                      <ul>
                        <% cat.sub_categories.each do |sub_cat| %>
                            <!-- <li><a href="<%= search_index_path( sub_categories: [sub_cat.id] ) %>"><%= sub_cat.name %></a></li> -->
                            <li><%= link_to sub_cat.name, sub_cat %></li>
                        <% end %>
                      </ul>
                    </div>
                <% end %>
              </div>
          <% end %>


      </div>
    </div>
    <div class="col-md-8 col-sm-8">
      <%= form_tag search_index_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag(:search, params[:search], class: 'form-control', placeholder: 'Search...') %>
            <span class="input-group-addon">
              <button name="button" style="border:none ; background-color: rgba(220, 146, 159, 0)" type="submit" class="submit-icon">
              <i class="glyphicon glyphicon-search"></i>
            </button>
            </span>
         </div>
      <% end %>
    </div>
  </div>
</div>


