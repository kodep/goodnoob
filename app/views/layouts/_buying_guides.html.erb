<% Category.with_guides.includes(:sub_categories, sub_categories: [:guides]).in_groups(2, false) do |cats| %>
    <div class="buying-guides-<%= cycle('left', 'right') -%>-column">
      <% cats.each do |cat| %>
          <div class="buying-list">
            <span class="buying-list-header"><%= cat.name %></span>
            <ul>
              <% cat.sub_categories.with_guides.each do |sub_cat| %>
                  <li><%= link_to sub_cat.name, sub_category_guide_path(sub_cat, sub_cat.guides.first) %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
    </div>
<% end %>
