<div class="thumb-wrapper">
    <div class="flex thumb-header">
        <span class="thumb-header-abbr">WRC</span>
        <span class="thumb-time-date">
            <span class="glyphicon glyphicon-time"></span>
            <span>02 sep 04:33</span>
        </span>
    </div>
    <div class="thumb-image">
        <%= image_tag "thumb-img-1.jpg", alt: "thumb-image" %>
    </div>
    <div class="flex thumb-footer">
        <span class="thumb-footer-model"><%= product.name %></span>
        <div class="thumb-star-wrapper">
            <span class="thumb-footer-star glyphicon glyphicon-star"></span>
            <span class="thumb-footer-star glyphicon glyphicon-star"></span>
            <span class="thumb-footer-star glyphicon glyphicon-star"></span>
            <span class="thumb-footer-star empty-star glyphicon glyphicon-star"></span>
        </div>
    </div>
    <div class="thumb-description">
        <p><%= product.description %></p>
    </div>
    <div class="thumb-moreinfo-link">
        <%= link_to 'More Info...', product %>
    </div>
</div>
